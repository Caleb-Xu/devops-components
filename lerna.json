{
    "packages": ["packages/*"],
    "version": "0.1.0",
    "npmClient": "yarn",
    "useWorkspaces": true,
    "command": {
        "publish": {
            "ignoreChanges": ["ignored-file", "*.md"]
        },
        "bootstrap": {
            "ignore": "component-*",
            "npmClientArgs": ["--no-package-lock"]
        }
    }
}
